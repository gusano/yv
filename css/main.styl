---

---

@import 'colors'
@import 'nav'
@import 'parallax'

@font-face
  font-family 'true lies'
  src url('true_lies.woff2') format('woff2')

html
  height 100%
  box-sizing border-box
*
*:before
*:after
  box-sizing inherit

body
  width 100%
  min-height 100%
  padding-bottom 6rem
  overflow-x hidden

  h1
  h2
    margin 0
  h2
    font-size 40px
  h1
  h2
  h3
    font-family 'Montserrat', sans-serif
    font-weight 700
    margin-top 22px
    margin-bottom 10px
  h2
    line-height 1
    margin-bottom 32px

  a
    color orange
    text-decoration none
    &:active
    &:focus
    &:visited
      color orange
    &:hover
      color white
      background orange
      text-decoration none

  #actions
    h3
      font-size 22px


  table
    margin auto
    tr.past
      text-decoration line-through
      text-decoration-color #c5c1c1
    td
      padding 0 20px 8px 0

main
  position relative
  top 5rem
  padding 6em 4em

.box-shadow-menu
  position fixed
  font-size 32px
  top 12px
  left 20px
  width 32px
  height 32px
  &:hover
    cursor pointer
    background transparent

.box-shadow-menu:before
  content ""
  position absolute
  left 0
  top 0.25em
  width 1em
  height 0.15em
  background white
  box-shadow 0 0.25em 0 0 white, 0 0.5em 0 0 white
  &:hover
    cursor pointer

body
  position relative
  margin 0 auto
  background white
  color #333
  font-family 'Raleway', sans-serif
  font-size 16px

.container
  margin-right auto
  margin-left auto
  padding-left 15px
  padding-right 15px

.module.parallax
  h1.true-lies
    position relative
    font-size 16vw
    &::first-letter
      font-size 18vw

p
  margin-bottom 40px

div.action
  padding 0 14px 0 4px
  margin-bottom 10px

  .desc
    min-height 166px

  ul.gear
    margin-top 10px
    list-style none
    padding-left 0

  .credits
    display inline-block
    height 45px
    color #9e9e9e
    font-style italic
    line-height 1.2
    margin-top 10px

span.title
  color #404040
  font-style italic

footer
  padding 2rem
  background #eee
  border-top 1px solid #e2e2e2
  font-size 85%
  letter-spacing -.01em
  position absolute
  right 0
  bottom 0
  left 0
  p
    margin 0

.ekko-lightbox
  a:hover
    background transparent

p.infos
.credits
  font-size 90%

.thumbs
  a:not(:first-child)
    img
      display none
      width 80px

@media only screen and (max-width: 768px)
  body
    font-size 14px
    h2
      font-size 30px
  .parallax-window
    h2
      font-size 38px
  div.action
    .desc
      min-height 110px
  table
    font-size 14px

@media only screen and (max-width: 639px)
  table
    font-size 10px

@media (min-width: 768px)
  .container
    width 750px
  .module.parallax h1.true-lies
    font-size 14vw
    &::first-letter
      font-size 16vw
      letter-spacing -6px

@media (min-width: 992px)
  .container
    width 970px

@media (min-width: 1200px)
  .container
    width 1170px
  .module.parallax h1.true-lies
    font-size 14vw
    &::first-letter
      font-size 16vw
      letter-spacing -6px

@media (min-width: 1350px)
  .module.parallax h1.true-lies
    font-size 12vw
    &::first-letter
      font-size 14vw
      letter-spacing -6px
